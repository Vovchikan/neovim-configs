{
  "notification.disabledProgressSources": ["erlang"],
  "clangd.enabled": true,
  "clangd.arguments": ["-header-insertion=never"],
  "languageserver": {
    "erlang": {
      "command": "erlang_ls",
      "args": [
        "--log-dir",
        "/tmp/erlang_ls.log",
        "--log-level",
        "info"
      ],
      "filetypes": ["erlang"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    }
  }
}
